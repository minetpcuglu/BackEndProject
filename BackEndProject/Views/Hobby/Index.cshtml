@model List<HobbyDTO>
<div class="row">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" asp-action="Index" asp-controller="Hobby" asp-route-startPage="0">First</a></li>
            <li class="page-item"><a class="page-link" asp-action="Index" asp-controller="Hobby" asp-route-startPage="@(ViewBag.NextPage)">Next</a></li>
            <li class="page-item"><a class="page-link" asp-action="Index" asp-controller="Hobby" asp-route-startPage="@(ViewBag.PreviousPage)">Previous</a></li>
            <li class="page-item"><a class="page-link" asp-action="Index" asp-controller="Hobby" asp-route-startPage="@(ViewBag.TotelRows/20)">Last</a></li>
        </ul>
    </nav>
</div>

    <table class="table table-bordered" id="tblHobby">
        <tr>
            <td>#</td>
            <td>Hobby</td>
            <th> Güncelle  </th>
            <th> Sil  </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.MyHobby</td>
                @*<td><a href="/Hobby/DeleteHobby/@item.Id" id="DeleteBtn" onclick="return confirm('Silmek Istediginize Eminmisiniz');" class="btn btn-outline-danger"> <b>Sil</b></a></td>7*@
                <td><a href="/Hobby/UpdateHobby/@item.Id" class="btn btn-outline-warning"> <b>Güncelle</b></a></td>
                <td>
                    <button type="button" class="btn btn-outline-danger btn-sm"
                            onclick="Delete(@item.Id)">
                        Sil
                    </button>
                </td>
            </tr>
        }

    </table>
    <a href="/Hobby/AddHobby/" class="btn btn-primary">Hobby Ekle</a>

    @section scripts{
        <script type="text/javascript" src="~/DemoJavaScript.js"></script>
    }


